{
  "name": "corn-maze-cad-electron",
  "version": "1.0.0",
  "description": "Electron main process for Corn Maze CAD",
  "main": "main.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rimraf dist",
    "dev": "cross-env NODE_ENV=development electron ."
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "cross-env": "^7.0.3",
    "electron": "^25.9.8",
    "electron-builder": "^24.0.0",
    "rimraf": "^5.0.0",
    "typescript": "^5.0.0"
  },
  "build": {
    "appId": "com.cornmazecad.app",
    "productName": "Corn Maze CAD",
    "directories": {
      "output": "../../dist"
    },
    "files": [
      "dist/**/*",
      "../../core-engine/**/*",
      "!../../core-engine/__pycache__/**/*"
    ],
    "win": {
      "target": "nsis",
      "icon": "../../assets/icon.ico"
    }
  }
}
